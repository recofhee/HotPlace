@charset "UTF-8";

section{width: 960px; border: 0px solid black; height: 0 auto; margin:auto; padding-top:65px; position: relative;}
#artcle3{width: 99%; border: 0px solid black; padding:5px;padding-top:90px; display: block;  height: 480px;}
aside{width: 370px; border: 0px solid black; padding: 5px; display: block; height: 400px; float: right; margin-top: -545px;}

.box1 {
	width:100%;
	display: inline-block; 
	border: 0px solid black;
	font-size: 13px;
	box-sizing: border-box;
	text-align: left;
	padding-top : 468px;
 }
.box1 li {
 	width: 100%;
	/* line-height: 20px; */
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	background: #02324a61;
	}
.box1 li a{color: white; text-decoration: none;}
.box1 li:hover a{color: red;}

table {
    width: 100%;
    border-top: 1px solid #fff;
    border-collapse: collapse;
    margin-bottom: 10px;
}
th, td {
    border-bottom: 1px solid #ffffff2b;
    color:#4f94bc;
}
tr:hover{
	color:white; text-shadow: 0 0 5px;
}
.reply th{
	width: 13%;
}
td{
	padding-left : 5px;
	width: auto;
	height:30px;
}
.bt {
	position: relative;
	width: 80px;
	height: 25px;
	font-size: 12px;
	color: black;
	background: white;
	cursor: pointer;
	margin: 5px;
}

.bt:hover {
	border: 1px solid;
	color: red;
}
.review_box{
	margin-top: -70px;
	
}
#replybox{
	background: #02324a61;
	width: 90%;
	height: 250px;
	overflow: auto;
	margin-bottom: 20px;
}