}

.under {
	display: inline-block;
	width: 120px;
	min-width: 70px;
	border-right: 3px solid #e4e2e2;
	padding: 0 10px 10px 0;
	font-size: 1.2em;
	font-weight: bold;
	
}

.container {
	width: 90%;
	margin: 0 auto;
}

